<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homeFragment"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.week2.chargepig.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_findFragment"
            app:destination="@id/findFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.week2.chargepig.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/findFragment"
        android:name="com.week2.chargepig.FindFragment"
        android:label="FindFragment" >
        <action
            android:id="@+id/action_findFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/successFragment"
        android:name="com.week2.chargepig.SuccessActivity"
        android:label="SuccessFragment" />
</navigation>